@section Head{
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}







<h1>UnPickedList</h1>


<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sr No.</th>
            <th>Id</th>
            <th> Text</th>
            <th>IsCompleted</th>
            <th>Completed On</th>
            <th>File</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UnPickedList)
        {
            @if (item.PickedStatus == true)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.JobsId</td>
                    <td>@item.Text</td>
                    <td>@item.IsCompleted</td>
                    <td>@item.CompletedOn</td>
                    <td>@item.FilePath</td>
                    <td>
                        <form method="post">
                            <button type="submit" class="btn btn-outline-info" asp-route-id="@item.JobsId">Picked</button>
                        </form>
                    </td>

                </tr>
            }
            else
            {
                <td>No Record</td>
            }

        }
    </tbody>
</table>


<h1>Picked Jobs</h1>
@if (Model.PickedList.Any())
{
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Sr No.</th>
                <th>Id</th>
                <th> Text</th>
                <th>IsCompleted</th>
                <th>Completed On</th>
                <th>File</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PickedList)
            {
                @if(item.PickedStatus == false)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.JobsId</td>
                        <td>@item.Text</td>
                        <td>@item.IsCompleted</td>
                        <td>@item.CompletedOn</td>
                        <td>@item.FilePath</td>
                        <td>
                            <form>
                                <button type="submit" asp-controller="Home" asp-action="PickedJobs" class="btn btn-outline-danger">UnPicked</button>
                            </form>
                        </td>

                    </tr>
                }
                else
                {
                    <td>No Record</td>
                }

        }
        </tbody>
    </table>
}
else
{
    <td>No records</td>
}



