@using ViewModels;
@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "_LayoutAdmin";
}



<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit the Role Name</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Id">Id</label>
                <input class="form-control" asp-for="Id" disabled>
            </div>
            <div class="form-group">
                <label asp-for="RoleName">Role Name</label>
                <input class="form-control" asp-for="RoleName">
                <span asp-validation-for="RoleName" class="text-danger"></span>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-outline-primary">Save Changes</button>
            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-default">Cancel</a>
        </div>
    </form>
</div>
<div class="card card-purple">
    <div class="card-header">
        <h3 class="card-title">Users in this role</h3>
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            <ol>
                @foreach (var user in Model.Users)
                {
                    <li> <h3 class="card-title">@user</h3></li>
                }
            </ol>
        }
        else
        {
            <h3 class="card-title">None at the moment</h3>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-outline-primary">Add/Remove Users</a>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        MenuChange(1);
        SubMenuAdministration(3);
    </script>
}